<h2>Books</h2>

<table>
 <thead>
  <tr>
   <th><p>Title</p></th>
   <th><p>Body</p></th>
  </tr>
 </thead>
 
 <tbody>
  <% @lists.each do |list| %>
  <tr>
   <td><span><%= list.title %></span></td>
   <td><span><%= list.body %></span></td>
 
  </tr>
  <% end %>
 </tbody>
</table>

<h2>New book</h2>
 <%= form_with model: @list, url:'/books', local:true do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>

