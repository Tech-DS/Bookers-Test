<%= form_with model:@book, url:book_path(@book.id), local:true do |f| %>
  
  <div class="field">
  <h4>Title:</h4>
  <%= f.text_field :title %>
  <h4>Body:</h4>
  <%= f.text_area :body %>
  </div>
  <%= f.submit 'Update Book' %>
  </div>
  <br>
  <td><%= link_to "Show", book_path(@book.id) %></td>
  |
  <td><%= link_to "Back", '/books/' %></td>
